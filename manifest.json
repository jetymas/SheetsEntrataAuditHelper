{
  "name": "Entrata Lease Audit Assistant",
  "description": "Streamlines lease audits for Entrata property management system",
  "version": "0.2",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "identity",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.entrata.com/*",
    "https://www.googleapis.com/*",
    "https://docs.google.com/*",
    "https://sheets.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "813695383875-rl8nkfrca4s05q1b382707o2jke551qn.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
	  "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/images/icon16.png",
      "48": "src/images/icon48.png",
      "128": "src/images/icon128.png"
    }
  },
  "icons": {
    "16": "src/images/icon16.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  },
  "background": {
    "service_worker": "src/js/background-worker.js",
    "type": "module"
  },
  "key": "",
  "short_name": "LeaseAuditHelp",
  "content_scripts": [
    {
      "matches": ["https://*.entrata.com/*"],
      "js": ["src/js/content.js"],
      "css": ["src/css/content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/css/*", "src/images/*"],
      "matches": ["https://*.entrata.com/*"]
    }
  ]
}