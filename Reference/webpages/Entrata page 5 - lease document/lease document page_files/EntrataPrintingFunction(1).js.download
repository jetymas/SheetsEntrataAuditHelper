/***** Print Content *****/

function printContent(id, cssFile, printImmediately, headerHTML, footerHTML) {

	var contentID = unescape(id);

	var cssFile = unescape(cssFile);
	var headerHTML = unescape(headerHTML);
	var footerHTML = unescape(footerHTML);
	if (document.getElementById)
	var contentTag = document.getElementById(id);
	else if (document.all)

	var contentTag = document.all[id];
	else if (document.layers)
	var contentTag = document.layers[id];

	if (! contentTag) contentTag = document.body;

	printWin = window.open( '#' ,'','')

	printWin.document.writeln('<html><head>');
	printWin.document.writeln( '<title>' + __( 'Print' ) + '</title>' );

	if (cssFile){
		if('application_css' == cssFile ) {
			printWin.document.writeln('<link href="/Common/css/common.css" rel="stylesheet" type="text/css" />')	;
			printWin.document.writeln('<link href="/Common/css/grid_engine/common_components.css" rel="stylesheet" type="text/css" />')	;
			printWin.document.writeln('<link href="/Common/css/grid_engine/common_application_components.css" rel="stylesheet" type="text/css" />')	;

		} else {
			printWin.document.writeln('<link rel="stylesheet" type="text/css" href="/less.php?f=/Entrata/css/_common/entrata.less">');
			printWin.document.writeln('<link rel="stylesheet" type="text/css" href="/Common/assets/components/patterns/css/print.css">');
		}
	}
	if('nobackground' == cssFile ) {
		printWin.document.writeln('</head><body class="nobackground"><table><tr><td>');
	} else {
		printWin.document.writeln('</head><body><table><tr><td>');
	}
	printWin.document.writeln( __( '{%s, headerhtml}', { headerhtml: headerHTML }  ) );
	strContent = contentTag.innerHTML.replace('id="paginationTable"','style="display:none";');
	strContent = contentTag.innerHTML.replace(/<table class="sort">/g,'	<table class="sort" style="width:auto;table-layout: auto;">');
	/*for hiding 2 print buttons*/
	strContent = strContent.replace('print_application.gif','1x1pix.gif');
	strContent = strContent.replace('print_application.gif','1x1pix.gif');
	/*hiding select on ledger page*/
	strContent = strContent.replace(__( '>Select<' ),'');
	/*hiding edit, print, remove on maintenance page*/
	strContent = strContent.replace(/<[Aa](.)*>edit<(.)*[Aa]>/g,__( 'edit' ) );
	strContent = strContent.replace(/<[Aa](.)*>print<(.)*[Aa]>/g,__( 'print') );
	strContent = strContent.replace(/<[Aa](.)*>remove<(.)*[Aa]>/g,__( 'remove') );
	/*hiding javascript ajax call on maintenance page*/
	strContent = strContent.replace(/<[Tt][Rr](.)*AjaxRecordDetail(.)*>/g,'<tr class="aRow">');
	strContent = strContent.replace('id=paginationTable','style="display:none;"');
	strContent = strContent.replace('id="paginationTable"','style="display:none;"');
	/*hiding javascript ajax call on payment page*/
	strContent = strContent.replace(/<[Tt][Rr](.)*AjaxArPaymentDetail(.)*>/g,'<tr class="aRow">');
	/*for hiding back button in all browsers*/
	strContent = strContent.replace('id=backButton','style="display:none;"');
	strContent = strContent.replace('id="backButton"','style="display:none;"');
	strContent = strContent.replace('id=logos','style="display:block;"');
	strContent = strContent.replace('id="logos"','style="display:block;"');

	strContent = strContent.replace('id="riEmailBtn"','style="display:none;"');
	strContent = strContent.replace('id=riEmailBtn','style="display:none;"');
	strContent = strContent.replace('id="riSubmitButtons"','style="display:none;"');
	strContent = strContent.replace('id=riSubmitButtons','style="display:none;"');
	strContent = strContent.replace('id="riEmailMessage"','style="display:none;"');
	strContent = strContent.replace('id=riEmailMessage','style="display:none;"');
	strContent = strContent.replace('id="riEmailPdf"','style="display:none;"');
	strContent = strContent.replace('id=riEmailPdf','style="display:none;"');
	strContent = strContent.replace( 'class="data"', 'style="height:100%;width:100%"' );
	strContent = strContent.replace( 'class="header"', 'style="width:100%!important"' );

	strContent = strContent.replace("FILTER: progid:DXImageTransform.Microsoft.Gradient(endColorstr='#dfdfdf', startColorstr='#ffffff', gradientType='0');",'');
	printWin.document.writeln( __( '{%s, Content}', { Content: strContent }  ) );
	printWin.document.writeln( __( '{%s, footerhtml}', { footerhtml: footerHTML }  ) );
	printWin.document.writeln('</td></tr></table></body></html>');
	printWin.document.close();
	if(window.focus) printWin.focus();
	if(printWin.document.readyState == "complete" || printWin.document.readyState == "loaded" || printWin.document.readyState == "interactive") {
		if(printImmediately) setTimeout(function(){printWin.print()}, 1000);
	}
	return printWin;
}

// We might need to remove this function as it is not used.
function printContentExcludingLinkouts( id, cssFile, printImmediately, headerHTML, footerHTML ) {

	obj = printContent(id, cssFile, printImmediately, headerHTML, footerHTML);

	arrojbAnchorTags = $( obj.document.body ).find( 'a' );
	$.each( arrojbAnchorTags, function( index, objAnchorTag ) {
		strAnchorText = $( objAnchorTag ).text();
		objTdTag = $( objAnchorTag ).parent().get();
		$( objTdTag ).removeAttr( 'onclick' );
		$( objTdTag ).text( strAnchorText );
	} );

	$( obj.document.getElementById( 'tblHeading' ) ).css( 'table-layout','auto' );
	$( obj.document.getElementById( 'tblContent' ) ).css( 'table-layout','auto' );
}