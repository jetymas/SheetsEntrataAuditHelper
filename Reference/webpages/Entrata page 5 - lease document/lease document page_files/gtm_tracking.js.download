GtmTracking.addGlobalDataLayer = function( strSection, strSubSection, intUserId, boolIsLoggedIn ) {
	if( 'undefined' !== typeof dataLayer ) {
		window.dataLayer = window.dataLayer || [];
		dataLayer = [{
			'section': strSection,
			'sub_section': strSubSection,
			'userId': intUserId,
			'logged_in': boolIsLoggedIn
		}];
	}
}
