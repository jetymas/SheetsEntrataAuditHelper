var GtmTracking = {};

GtmTracking.addError = function( strErrorType, strComponentName, strStepName, strModalName, strErrorMessage ) {
	if( 'undefined' !== typeof dataLayer ) {
		dataLayer.push( {
			'event'             : 'e_error',
			'errorType'         : strErrorType,
			'componentName'     : strComponentName,
			'stepName'          : strStepName,
			'modalName'         : strModalName,
			'errorMessage'      : strErrorMessage
		} );
	}
}

